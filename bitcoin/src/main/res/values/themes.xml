<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryLightColor</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>
    <style name="Theme.MyApp.WidgetContainer" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
    </style>
    <style name="Theme.MyApp.WidgetContainer.Light">
        <item name="appBackgroundColor">#fff</item>
    </style>
    <style name="Theme.MyApp.WidgetContainer.Light.Transparent">
        <item name="appBackgroundColor">@android:color/transparent</item>
    </style>
    <style name="Theme.MyApp.WidgetContainer.Dark">
        <item name="appBackgroundColor">#111</item>
    </style>
    <style name="Theme.MyApp.WidgetContainer.Dark.Transparent">
        <item name="appBackgroundColor">#88000000</item>
    </style>
</resources>